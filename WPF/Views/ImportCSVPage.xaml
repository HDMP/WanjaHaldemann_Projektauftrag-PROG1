<UserControl x:Class="SwissAddressManager.WPF.Views.ImportCSVPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1e1e1e">
    <Grid>
        <StackPanel Margin="10">
            <Button Content="Select CSV File" Width="150" Height="30" Click="SelectCSV_Click"
                    Background="#3A3A3A" Foreground="White" HorizontalAlignment="Left"/>
            <DataGrid x:Name="CSVDataGrid" AutoGenerateColumns="True" HeadersVisibility="Column" 
                      Background="#2d2d30" Foreground="White" 
                      BorderBrush="Transparent" RowBackground="Transparent"
                      AlternatingRowBackground="#2e2e34" ColumnHeaderHeight="40"
                      FontFamily="Segoe UI" FontSize="14" Margin="0,20,0,0"/>
            <Button Content="Save to Database" Width="150" Height="30" Background="#3A3A3A" 
                    Foreground="White" HorizontalAlignment="Left" Margin="0,20,0,0"
                    Click="SaveToDatabase_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
